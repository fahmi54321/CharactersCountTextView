<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtTextView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="Enter your text"></EditText>

    <com.wafflecopter.charcounttextview.CharCountTextView
        android:id="@+id/tvTextCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtTextView"
        app:exceededTextColor="#FF0000"
        app:maxCharacters="50"></com.wafflecopter.charcounttextview.CharCountTextView>

</RelativeLayout>